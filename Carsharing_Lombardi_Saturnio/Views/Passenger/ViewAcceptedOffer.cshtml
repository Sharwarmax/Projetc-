@model List<Offer>
<h1>View Accepted Offer</h1>
@if (Model == null)
{
	<span class="alert alert-danger">There is no Accepted offer...</span>
	<a asp-action="Welcome" asp-controller="User">Return</a>
}
else
{
	@if (TempData["SuccessMessage"] != null)
	{
		<span class="alert alert-success"> @TempData["SuccessMessage"]</span>
	}
	<table class="table">
		<tr>
			<th>Destination</th>
			<th>Starting point</th>
			<th>Date</th>

		</tr>
		@foreach (var offer in Model)
		{
			<tr>
				<td>@offer.Destination</td>
				<td>@offer.StartPoint</td>
				<td>@offer.Date.ToString("dd/MM/yyyy")</td>
				<td><a asp-action="ViewAcceptedOfferDetails" asp-route-id_offer="@offer.Id">Details</a></td>
			</tr>
		}
		<tr>
		<td><a asp-controller="User" asp-action="Welcome">Return</a></td>
		</tr>
	</table>
}

@model List<Offer>
<center><h1>Offers</h1></center>
@if (Model == null)
{
	<span class="alert alert-danger">There is no offer...</span>
	<a asp-action="Welcome" asp-controller="User">Return</a>
}
else
{
	@if (TempData["Message"] != null)
	{
		<span class="alert alert-success"> @TempData["Message"]</span>
	}
	<table class="table">
		<tr>
			<th>Destination</th>
			<th>Starting point</th>
		</tr>
		@foreach (var offer in Model)
		{
			<tr>
				<td>@offer.Destination</td>
				<td>@offer.StartPoint</td>
				@if (offer.Completed == false)
				{
					<td><a asp-action="ViewDetails" asp-route-id_offer="@offer.Id">Details</a></td>
				}
			</tr>
		}
	</table>
	<p>There're no offers you are interested in? <a asp-controller="Passenger" asp-action="RequestOffer">Click here</a></p>
	<a asp-controller="User" asp-action="Welcome">Return</a>
}
